{% extends 'base.html.twig' %}

{% block title %}Historique des commandes{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<!-- <div class="container-fluid"> -->
    <!--debut barre a gaucher--> 
    <form class="py-5 my-5" method="post">
        <!-- <form method="post"> -->
        <div class="container">
            <div class="bg-white shadow rounded-lg d-block d-sm-flex">
                <div class="profile-tab-nav border-right">
                    <div class="nav d-flex flex-column nav-pills">
                        <a class="nav-link nav--Profile" href="{{ path('app_account', {'id': app.user.id}) }}"><i class="ri-profile-line"></i>  Comptes</a>
                        <a class="nav-link nav--Profile" href="{{ path('app_access', {'id': app.user.id}) }}"><i class="ri-shield-user-line"></i>  Securité</a>
                        <a class="nav-link nav--Profile" href="{{ path('kart_user') }}"><i class="ri-shopping-cart-line"></i>  Panier</a>
                        <a class="nav-link nav--Profile" href="#"><i class="ri-history-line"></i>  Historique des commandes</a>
                        <a class="nav-link nav--Profile" href="{{ path('app_logout') }}"><i class="ri-logout-circle-r-line"></i>  Déconnexion</a>
                    </div>
                </div>
                <!--Fin de la barre gauche-->

                <!--Debut rectangle centrale-->
                    <div class="tab-content p-4 p-md-5" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="account" role="tabpanel" aria-labelledby="account-tab">
                        <h3 class="mb-4 label--Profile">HISTORIQUE DE VOS COMMANDES</h3>
                        
                            <table class="table table--TxtDark">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>N°</th>
                                        <th>Nb d'articles</th>
                                        <th>Montant facture</th>
                                        <th>Statut</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in orders %}
                                    <tr>
                                        <td>{{ item['creationdate'] }}</td>
                                        <td>{{ item.id }}</td>
                                        <td class="text-right">{{ item.article.Price }}€</td>
                                        <td>Photo</td>
                                        <td>{{ item['quantity'] }}</td><!--{#{{ item.Quantity }}#}boutons - et +</td> -->
                                        <td class="text-right">
                                            {{ item.article.Price * item.quantity }}€
                                        </td>
                                        <td>
                                            <input type="hidden" name="view" value="{{ article.id }}">
                                            <a class="btn btn-success btn-sm" href="{{ path('kart_add', {id: item.article.id}) }}">
                                                <i class="bi bi-cart-plus"></i>
                                                <i class="ri-add-line"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center">Votre panier est vide</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                {% if orders and total > 0 %}
                                <tfoot>
                                    <tr>
                                        <td>TOTAL :</td>
                                        <td colspan="5" class="text-right">{{ total }}€</td>
                                        <td>
                                            <a class="btn btn-danger btn-sm" href="{{ path('kart_deleteall') }}">
                                                <i class="bi bi-cart-moins"></i>
                                                <i class="ri-delete-bin-5-line"></i>
                                            </a>
                                        </td>
                                    </tr>
                                </tfoot>
                                {% endif %}
                            </table>
                            <!-- {{dump()}} -->
                            <!-- -->

                            {% if orders %}
                            <!-- <div class="mt-3"> -->
                            <button class="btn btn-sm btnUser" type="submit">Passer la commande</button>
                            <!-- <a class="btn btn-sm btn-secondary" href="{{ path('homepage') }}">Annuler</a> -->
                            {% endif %}
                        <!-- </div> -->
                    </div>
                </div>
                {#{{ form_end(registrationForm) }}#}
            </div>
        </div>
    </form>
    <!--Fin rectangle centrale-->
<!-- </div> -->
{% endblock %}
