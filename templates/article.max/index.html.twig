{% extends 'base.html.twig' %} {% block title %}Article index{% endblock %} {%
block body %}
<div class="container-fluid pt-5" id="BigBody">
  <div class="row justify-content-between">
    <h1>Mes Articles</h1>
    <a
      class="btn btn-warning btn-sm mb-4 pb-2"
      href="{{ path('article_new') }}"
    >
      <i class="ri-add-circle-line"></i> Ajouter un nouvel article
    </a>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Description</th>
        <th>Region</th>
        <th>Contenance</th>
        <th>Prix</th>
        <th>Score</th>
        <th>Categorie</th>
        <th>Image</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      {% for article in articles %}
      <tr>
        <td>{{ article.id }}</td>
        <td>{{ article.Title }}</td>
        <td>{{ article.Description }}</td>
        <td>{{ article.Region }}</td>
        <td>{{ article.Capacity }}</td>
        <td>{{ article.Price }}</td>
        <td>{{ article.Score }}</td>
        <td>{{ article.Category.label }}</td>
        <!-- <td>{#{{ article.Image }}#}</td> -->
        <td>
          <a
            class="btn btn-secondary btn-sm"
            href="{{ path('article_show', { id: article.id }) }}"
            ><i class="ri-eye-line"></i> Voir</a
          >
          <a
            class="btn btn-warning btn-sm"
            href="{{ path('article_edit', { id: article.id }) }}"
            ><i class="fas fa-edit"></i> Modifier</a
          >
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="10">Aucun article trouv√©</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
