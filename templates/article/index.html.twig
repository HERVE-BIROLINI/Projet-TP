{% extends 'base.html.twig' %} {% block title %}Article index{% endblock %} {%
block body %}
<div class="container-fluid pt-5" id="BigBody">
	<div class="row justify-content-between">
		<h1>Mes Articles</h1>
		<a class="btn btnUserReverse btn-sm mb-4 pb-2"
			href="{{ path('article_new') }}"
		>
		<i class="ri-add-circle-line"></i> Ajouter un nouvel article
		</a>
	</div>

	<table class="table table-striped table--txtlight">
		<thead class="thead--light">
		<tr>
			<th>Id</th>
			<th>Nom</th>
			<th>Description</th>
			<th>Region</th>
			<th>Contenance</th>
			<th>Prix</th>
			<th>Score</th>
			<th>Categorie</th>
			<th>Image</th>
			<th>Bestseller</th>
			<th>actions</th>
		</tr>
		</thead>
		<tbody>
		{% for article in articles %}
		<tr>
			<td>{{ article.id }}</td>
			<td>{{ article.Title }}</td>
			<td>{{ article.Description }}</td>
			<td>{{ article.Region }}</td>
			<td>{{ article.Capacity }}</td>
			<td>{{ article.Price }}</td>
			<td>{{ article.Score }}</td>
			<td>{{ article.Category.label }}</td>

			<td>photo</td>
			<!-- <td>{#{{ article.Image }}#}</td> -->

			<td>
				<!-- <input type="checkbox" id="scales" name="scales" disabled -->
				{% if article.bestseller %}
				<!-- checked -->
				<img class="img-bestseller" src="{{ asset('build/images/true.png') }}" alt="bestseller">
				{% endif %}
				<!-- > -->
			</td>
			<td>
				<div class="d-flex flex-row flex-nowrap">
					<a class="btn btn-secondary btn-sm"
						href="{{ path('article_show', { id: article.id }) }}"
					><!--<i class="ri-eye-line"></i> -->Voir</a>
					<a class="btn btnUserReverse btn-sm"
						href="{{ path('article_edit', { id: article.id }) }}"
					><!--<i class="ri-edit-2-line"></i> -->Modifier</a>
				{{ include('article/_delete_form.html.twig') }}
			</div>
			</td>
		</tr>
		{% else %}
		<tr>
			<td colspan="10">Aucun article trouv√©</td>
		</tr>
		{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
