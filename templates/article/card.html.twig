<p>- Il y a {{ countByCategory }} produits dans cette catégorie !</p>
#}

<!-- {#{% set imgCur = article.image %}#} -->
    <div class="d-flex flex-row ml-5 card--article">
        <div class="d-flex flex-column card--imgs">
            <img src="" class="card-img-top card--img" alt="">
            <!-- <img src="{#{{ article.image }}#}" class="card-img-top card--img" alt=""> -->
            <div class="d-flex flex-row">
                Carousel à créer, avec des images boutons
            </div>
        </div>
        <div class="d-flex flex-column card-body ml-3">
            <!-- titre -->
            <div class="d-flex flex-row">
                <h5>{{ article.region }}</h5>
            </div>
            <!-- region -->
            <div class="d-flex flex-row">
                <h5>{{ article.category.label }}</h5>
            </div>
            <!-- description -->
            <div class="d-flex flex-row">
                <h6>{{ article.description }}</h6>
            </div>
            <!-- score -->
            <div class="d-flex flex-row">
                5 étoiles colorées selon SCORE
            </div>
            <div class="m-2"></div>
            <div class="d-flex flex-row card-footer">
                <a class="btn btn-sm btnUser InputAdd2Kart" href="{{ path('kart_add', {'id': article.id}) }}"><i class="ri-shopping-basket-line"></i>  Ajouter au panier</a>
                <div class="m-2"></div>
                <div class="d-flex flex-column">
                    <h3>{{ article.price }} €</h3>
                    <div class="DivLinearGradientHorizontal"></div>
                </div>
            </div>
        </div>
    </div>

</div>
