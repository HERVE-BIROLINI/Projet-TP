<h1 class="ml-5 mt-5">{{ article.title }}</h1>

<div class="container_fluid" id="BigBody">
    {#
    {% for article in articles %}
    {% set countTotal = countTotal + 1 %}
    {% if article.category == category.id %}
        {% set countByCategory = countByCategory + 1 %}
    {% endif %}
{% endfor %}
