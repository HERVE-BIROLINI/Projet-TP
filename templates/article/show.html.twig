{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="container pt-5" id="BigBody">
    <div class="bouton">
    <h1>Article</h1>
    {{ include('article/_delete_form.html.twig') }}
    </div>

    <table class="table table-striped table--txtlight">
        <tbody>
            <tr>
                <th class="thead--light">Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th class="thead--light">Title</th>
                <td>{{ article.Title }}</td>
            </tr>
            <tr>
                <th class="thead--light">Description</th>
                <td>{{ article.Description }}</td>
            </tr>
            <tr>
                <th class="thead--light">Region</th>
                <td>{{ article.Region }}</td>
            </tr>
            <tr>
                <th class="thead--light">Capacity</th>
                <td>{{ article.Capacity }}</td>
            </tr>
            <tr>
                <th class="thead--light">Price</th>
                <td>{{ article.Price }}</td>
            </tr>
            <tr>
                <th class="thead--light">Score</th>
                <td>{{ article.Score }}</td>
            </tr>
            <tr>
                <th class="thead--light">Category</th>
                <td>{{ article.Category.label }}</td>
            </tr>
            <!-- <tr>
                <th class="thead--light">Image</th>
                <td>{#{{ article.Image }}#}</td>
            </tr> -->
        </tbody>
    </table>
<div class"bouton">
    

    <a class="btn btn-sm btnUserReverse" href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
    
    <a class="btn btn-sm btn-secondary" href="{{ path('article_index') }}">Retour Ã  la liste</a>
    
</div>
</div>

{% endblock %}
