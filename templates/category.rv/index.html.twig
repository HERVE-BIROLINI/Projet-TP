{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="container pt-5" id="BigBody">

    <div class="row justify-content-between">
        <h1>Mes Catégories</h1>
        <a class="btn btn-warning btn-sm mb-4 pb-2" href="{{ path('category_new') }}">
            <i class="ri-add-circle-line"></i>    Ajouter une nouvelle catégorie
        </a>
    </div>

    <table class="table table--TxtLight">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.Label }}</td>
                <td>
                    <a class="btn btn-secondary btn-sm" href="{{ path('category_show', {'id': category.id}) }}"><i class="ri-eye-line"></i>  Voir</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('category_edit', {'id': category.id}) }}"><i class="fas fa-edit"></i>  Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- <a href="{{ path('category_new') }}">Create new</a> -->

</div>
{% endblock %}
