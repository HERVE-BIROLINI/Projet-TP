{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="container" id="BigBody">

    <div class="row justify-content-between">
        <h1>Mes Catégories</h1>
        <a class="btn btnUserReverse btn-sm mb-4 pb-2" href="{{ path('category_new') }}">
            <i class="ri-add-circle-line"></i>    Ajouter une nouvelle catégorie
        </a>
    </div>

    <table class="table table-striped table--txtlight">
        <thead class="thead--light">
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.Label }}</td>
                <td style="width:25%;">
                    <div class="d-flex flex-row flex-nowrap">
                        <a class="btn btn-secondary btn-sm" href="{{ path('category_show', {'id': category.id}) }}"><i class="ri-eye-line"></i>  Voir</a>
                        <a class="btn btnUserReverse btn-sm" href="{{ path('category_edit', {'id': category.id}) }}"><i class="ri-edit-2-line"></i>  Modifier</a>
                        {% if not isusedcategory(category.id) %}
                        {{ include('category/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- <a href="{{ path('category_new') }}">Create new</a> -->

</div>
{% endblock %}
